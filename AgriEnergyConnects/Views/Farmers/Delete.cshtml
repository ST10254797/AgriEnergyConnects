@model AgriEnergyConnects.Models.Farmer

@{
    ViewData["Title"] = "Delete Farmer";
}

<div class="container mt-4">
    <h2 class="mb-3 text-danger">Delete Confirmation</h2>
    <p class="lead">Are you sure you want to delete this farmer?</p>

    <div class="card shadow-sm">
        <div class="card-body">
            <h5 class="card-title mb-3">Farmer Details</h5>
            <dl class="row">
                <dt class="col-sm-3 fw-semibold text-muted">
                    @Html.DisplayNameFor(model => model.FullName)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.FullName)
                </dd>

                <dt class="col-sm-3 fw-semibold text-muted">
                    @Html.DisplayNameFor(model => model.PhoneNumber)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.PhoneNumber)
                </dd>

                <dt class="col-sm-3 fw-semibold text-muted">
                    @Html.DisplayNameFor(model => model.Email)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Email)
                </dd>

                <dt class="col-sm-3 fw-semibold text-muted">
                    @Html.DisplayNameFor(model => model.Location)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Location)
                </dd>

                <dt class="col-sm-3 fw-semibold text-muted">
                    @Html.DisplayNameFor(model => model.UserId)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.UserId)
                </dd>
            </dl>
        </div>
    </div>

    <form asp-action="Delete" class="mt-4">
        <input type="hidden" asp-for="Id" />
        <div class="d-flex gap-2">
            <input type="submit" value="Confirm Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
