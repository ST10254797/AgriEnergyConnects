@model AgriEnergyConnects.Models.ViewModels.FarmerProfileViewModel

@{
    ViewData["Title"] = "Your Profile";
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">
        @TempData["Success"]
    </div>
}

<h1>Your Profile</h1>
<hr />

<div class="row">
    <div class="col-md-6">
        <h4>Profile Details</h4>
        <dl class="row">
            <dt class="col-sm-3">Full Name</dt>
            <dd class="col-sm-9">@Model.FullName</dd>

            <dt class="col-sm-3">Phone Number</dt>
            <dd class="col-sm-9">@(Model.PhoneNumber ?? "Not provided")</dd>

            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">@Model.Email</dd>

            <dt class="col-sm-3">Location</dt>
            <dd class="col-sm-9">@(Model.Location ?? "Not provided")</dd>
        </dl>

        <h4>Update Profile</h4>
        <form asp-action="UpdateProfile" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Hidden fields to keep non-editable data during post -->
            <input type="hidden" asp-for="FullName" />
            <input type="hidden" asp-for="Email" />

            <!-- Phone Number -->
            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label"></label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>

            <!-- Location -->
            <div class="form-group">
                <label asp-for="Location" class="control-label"></label>
                <input asp-for="Location" class="form-control" />
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>

            <div class="form-group mt-4">
                <input type="submit" value="Save Changes" class="btn btn-primary" />
                <a asp-action="Profile" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
