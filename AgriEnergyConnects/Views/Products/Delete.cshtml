@model AgriEnergyConnects.Models.Product

@{
    ViewData["Title"] = "Delete Product";
}

<div class="container mt-4">
    <h2 class="mb-3 text-danger">Delete Product</h2>
    <h5 class="text-warning">Are you sure you want to delete this?</h5>

    <div class="card mt-4">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Name</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>

                <dt class="col-sm-3">Category</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Category)</dd>

                <dt class="col-sm-3">Production Date</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.ProductionDate)</dd>

                <dt class="col-sm-3">Farmer</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Farmer.Email)</dd>
            </dl>
        </div>
    </div>

    <form asp-action="Delete" class="mt-4">
        <input type="hidden" asp-for="Id" />
        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
