@model AgriEnergyConnects.Models.Product

@{
    ViewData["Title"] = "Product Details";
}

<div class="container mt-4">
    <h2 class="mb-4">Product Details</h2>

    <div class="card">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Name</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>

                <dt class="col-sm-3">Category</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Category)</dd>

                <dt class="col-sm-3">Production Date</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.ProductionDate)</dd>

                <dt class="col-sm-3">Farmer Email</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Farmer.Email)</dd>
            </dl>
        </div>
    </div>

    <div class="mt-4 d-flex gap-2">
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">Edit</a>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>
