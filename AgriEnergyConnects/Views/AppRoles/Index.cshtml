@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

@{
    ViewData["Title"] = "Application Roles";
}

<div class="container mt-4">
    <h2 class="mb-3 text-primary">Application Roles</h2>

    <div class="mb-3">
        <a asp-action="Create" class="btn btn-success">+ Create New Role</a>
    </div>

    <div class="table-responsive">
        <table class="table table-bordered table-striped align-middle shadow-sm">
            <thead class="table-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.FirstOrDefault()!.Id)</th>
                    <th>@Html.DisplayNameFor(model => model.FirstOrDefault()!.Name)</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any())
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Name</td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="2" class="text-center text-muted">No roles found.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
