<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AgriEnergyConnects</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Bootstrap Icons (Official CDN) -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AgriEnergyConnects.styles.css" asp-append-version="true" />

    <style>
        /* Navbar Styling */
        .navbar {
            background-color: #4CAF50;
        }

            .navbar .nav-link {
                color: white !important;
                font-weight: 500;
            }

                .navbar .nav-link:hover,
                .navbar .nav-link.active {
                    background-color: #45a049;
                    color: #fff !important;
                }

        /* Footer Styling */
        .footer {
            background-color: #4CAF50;
            color: white;
            padding: 1rem 0;
        }

            .footer a {
                color: white;
            }

                .footer a:hover {
                    color: #d0ffd0;
                }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg shadow-sm">
            <div class="container-fluid">
                <a class="navbar-brand text-white fw-bold" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-leaf-fill"></i> AgriEnergyConnects
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar"
                        aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="mainNavbar">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "active" : "")"
                               asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house-door-fill"></i> Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Privacy" ? "active" : "")"
                               asp-area="" asp-controller="Home" asp-action="Privacy">
                                <i class="bi bi-shield-lock-fill"></i> Privacy
                            </a>
                        </li>

                        @if (User.IsInRole("Employee"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Farmers" asp-action="Index">
                                    <i class="bi bi-people-fill"></i> Farmers
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Products" asp-action="EmployeeView">
                                    <i class="bi bi-box-seam"></i> All Products
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="AppRoles" asp-action="Index">
                                    <i class="bi bi-person-gear"></i> Roles
                                </a>
                            </li>
                        }

                        @if (User.IsInRole("Farmer"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="Education">
                                    <i class="bi bi-book-half"></i> Education
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Products" asp-action="Index">
                                    <i class="bi bi-bag-check-fill"></i> Products
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Chat" asp-action="Index">
                                    <i class="bi bi-chat-dots-fill"></i> Farmer Chat
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Farmers" asp-action="Profile">
                                    <i class="bi bi-person-circle"></i> Farmers Profile
                                </a>
                            </li>
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <div class="container my-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer mt-auto text-center">
        <div class="container">
            <span>&copy; 2025 - AgriEnergyConnects - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a></span>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
