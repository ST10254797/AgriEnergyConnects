@{
    ViewData["Title"] = "AgriEnergyConnect - Empowering Sustainable Agriculture";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>
        :root {
            --primary-color: #2b8a3e;
            --secondary-color: #37b24d;
            --accent-color: #74b816;
            --dark-color: #1e293b;
            --light-color: #f8fafc;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: var(--light-color);
        }

        .hero-section {
            position: relative;
            color: white;
            text-align: center;
            padding: 120px 20px 100px;
            background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
        }

        .cta-button {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            background-color: var(--accent-color);
            color: white;
            padding: 1rem 2rem;
            border-radius: 50px;
            text-decoration: none;
            font-weight: 600;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

            .cta-button:hover {
                transform: translateY(-3px);
                box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
                color: white;
            }

        .feature-icon {
            font-size: 3rem;
            color: var(--primary-color);
            margin-bottom: 15px;
        }

        .feature-box {
            border: 1px solid #e0e0e0;
            border-radius: 16px;
            padding: 30px 20px;
            text-align: center;
            background-color: white;
            transition: all 0.3s ease-in-out;
            height: 100%;
        }

            .feature-box:hover {
                transform: translateY(-5px);
                box-shadow: 0 12px 24px rgba(0, 0, 0, 0.12);
            }

        .testimonials-section {
            background-color: rgba(43, 138, 62, 0.05);
        }

        .testimonial-card {
            padding: 2rem;
            max-width: 800px;
            margin: auto;
        }

        .testimonial-quote {
            font-size: 1.25rem;
            font-style: italic;
            color: #333;
        }

        .testimonial-name {
            margin-top: 1rem;
            font-weight: 600;
            color: var(--primary-color);
        }

        .carousel-control-prev-icon,
        .carousel-control-next-icon {
            background-color: var(--primary-color);
            border-radius: 50%;
            width: 40px;
            height: 40px;
        }

        .card-header {
            background-color: var(--primary-color);
            color: white;
            font-weight: bold;
        }
    </style>
</head>
<body class="d-flex flex-column min-vh-100">

    <!-- Hero Section -->
    <section class="hero-section text-white text-center d-flex align-items-center" style="background: linear-gradient(to right, #2e7d32, #66bb6a); min-height: 80vh;">
        <div class="container">
            <h1 class="display-3 fw-bold mb-3 animate__animated animate__fadeInDown">AgriEnergyConnect</h1>
            <p class="lead mb-4 animate__animated animate__fadeInUp animate__delay-1s">
                Where Renewable Power Meets Responsible Cultivation.
            </p>
            <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-lg btn-light text-success fw-bold px-4 py-2 shadow-sm animate__animated animate__zoomIn animate__delay-2s">
                Get Started
                <i class="fas fa-arrow-right ms-2"></i>
            </a>
        </div>
    </section>


    <main role="main" class="flex-grow-1">
        <div class="container my-5">
            <!-- Core Offerings Section -->
            <section class="features-section mb-5">
                <div class="text-center mb-5">
                    <h2 class="fw-bold mb-0">Our Core Offerings</h2>
                    <p class="text-muted mt-2">Smarter tools for farmers and agriculture professionals.</p>
                </div>
                <div class="row g-4">
                    <div class="col-md-4">
                        <div class="feature-box h-100">
                            <div class="icon-circle mb-3"><i class="fas fa-users"></i></div>
                            <h5 class="fw-bold">Farmer Registration</h5>
                            <p class="text-muted">Effortlessly create and manage comprehensive farmer profiles, ensuring accurate data, seamless updates, and reliable record-keeping.</p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="feature-box h-100">
                            <div class="icon-circle mb-3"><i class="fas fa-boxes"></i></div>
                            <h5 class="fw-bold">Product Management</h5>
                            <p class="text-muted">Optimize product listings with real-time stock tracking, intuitive inventory controls, and simplified availability management.</p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="feature-box h-100">
                            <div class="icon-circle mb-3"><i class="fas fa-chart-line"></i></div>
                            <h5 class="fw-bold">Employee Tools</h5>
                            <p class="text-muted">Empower your team with smart, efficient tools designed to streamline operations, enhance productivity, and support agricultural success.</p>
                        </div>
                    </div>
                </div>
            </section>


            <!-- Testimonials Section -->
            <section class="testimonials-section py-5 rounded-3">
                <div class="text-center mb-5">
                    <h2 class="fw-bold">What Our Farmers have to Say</h2>
                    <p class="text-muted">Hear from farmers about how we’ve made an impact.</p>
                </div>
                <div id="testimonialCarousel" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <div class="testimonial-card text-center">
                                <p class="testimonial-quote">
                                    “AgriEnergyConnect has transformed our farming operations by streamlining product management.”
                                </p>
                                <div class="testimonial-name">Shaldon Sindraj, Farmer</div>
                            </div>
                        </div>
                        <div class="carousel-item">
                            <div class="testimonial-card text-center">
                                <p class="testimonial-quote">
                                    “Efficient tools for managing farmers and products. Love it!”
                                </p>
                                <div class="testimonial-name">Devesh Naidoo, Farmer</div>
                            </div>
                        </div>
                        <div class="carousel-item">
                            <div class="testimonial-card text-center">
                                <p class="testimonial-quote">
                                    “The platform is user-friendly and helps us stay organized.”
                                </p>
                                <div class="testimonial-name">Ryan Pillay, Farmer</div>
                            </div>
                        </div>
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#testimonialCarousel" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#testimonialCarousel" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </section>

        </div>
    </main>

    <!-- Footer -->
    <footer class="bg-success text-white py-4 mt-auto">
        <div class="container text-center">
            <p class="mb-0">&copy; @DateTime.Now.Year - AgriEnergyConnect. All rights reserved.</p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

