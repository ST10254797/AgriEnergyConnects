@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<style>
    body {
        background-color: #f5fff5;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    h1, h2 {
        color: #2e7d32;
    }

    .btn-green {
        background-color: #4caf50;
        color: white;
        border: none;
    }

        .btn-green:hover {
            background-color: #388e3c;
        }

    a {
        color: #2e7d32;
    }

        a:hover {
            color: #1b5e20;
            text-decoration: underline;
        }

    .card {
        background: #ffffff;
        border: 1px solid #c8e6c9;
        border-radius: 8px;
        box-shadow: 0 4px 10px rgba(46, 125, 50, 0.1);
        padding: 2rem;
    }

    .form-label {
        font-weight: 600;
    }

    .form-control {
        border-radius: 6px;
    }
</style>

<h1 class="text-center mb-4">@ViewData["Title"]</h1>

<div class="row justify-content-center">
    <div class="col-md-5">
        <div class="card">
            <form id="account" method="post">
                <h2 class="mb-3">Use a local account to log in</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="form-check mb-3">
                    <input class="form-check-input" asp-for="Input.RememberMe" />
                    <label class="form-check-label" asp-for="Input.RememberMe">
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>

                <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-green mb-3">Log in</button>

                <div class="text-center">
                    <p><a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a></p>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
